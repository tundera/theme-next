{
  "extends": "tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "isolatedModules": false,
    "outDir": "dist",
    "noEmit": true
  },
  "include": ["next-env.d.ts", "src/pages/api/**/*.ts"],
  "exclude": ["node_modules", ".fab", ".next", ".vercel"]
}
